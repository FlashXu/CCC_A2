version: '3'

services:
  backend:
    container_name: backend
    build: backend
    ports: 
      - 5000:5000
    volumes:
      - ./backend:/code
    depends_on:
      - redis
    logging:
      options:
        max-size: 10m
    restart: always

  redis:
    container_name: redis
    image: redis:alpine
    restart: always
    
  frontend:
    container_name: frontend
    build: frontend
    ports:
      - 80:80
    restart: always
